<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".SignUp">

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="207dp"
        android:layout_height="47dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/button_style_sign_on"
        android:text="Sign Up"
        app:layout_constraintBottom_toTopOf="@+id/txtSignIn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edAddress"
        app:layout_constraintVertical_bias="0.77" />

    <TextView
        android:id="@+id/txtSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Sign In!"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btnSignUp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/txtBox2"
        app:layout_constraintTop_toTopOf="@+id/txtBox2" />

    <TextView
        android:id="@+id/txtBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:text="Already Have An Account? "
        android:textColor="@color/AccentText"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txtSignIn"
        app:layout_constraintStart_toStartOf="@+id/btnSignUp"
        app:layout_constraintTop_toBottomOf="@+id/btnSignUp"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/edEmailSign"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/btnSignUp"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/btnSignUp"
        app:layout_constraintTop_toBottomOf="@+id/txtReEm" />

    <EditText
        android:id="@+id/edPassSign"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/edEmailSign"
        app:layout_constraintTop_toBottomOf="@+id/txtRePass" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="185dp"
        android:layout_height="79dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/edEmailSign"
        app:layout_constraintStart_toStartOf="@+id/edEmailSign"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cyexpress" />

    <EditText
        android:id="@+id/edPass2Sign"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Re-Enter Password"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/edEmailSign"
        app:layout_constraintTop_toBottomOf="@+id/txtReRePass" />

    <TextView
        android:id="@+id/txtReEm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="*Required"
        android:textColor="@color/AccentText"
        app:layout_constraintEnd_toEndOf="@+id/edEmailSign"
        app:layout_constraintTop_toBottomOf="@+id/imageView1" />

    <TextView
        android:id="@+id/txtBox6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="@color/AccentText"
        app:layout_constraintBottom_toTopOf="@+id/edEmailSign"
        app:layout_constraintStart_toStartOf="@+id/edEmailSign" />

    <TextView
        android:id="@+id/txtBox7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/AccentText"
        app:layout_constraintBottom_toTopOf="@+id/edPassSign"
        app:layout_constraintStart_toStartOf="@+id/edEmailSign" />

    <TextView
        android:id="@+id/txtBox8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Re-Enter Password"
        android:textColor="@color/AccentText"
        app:layout_constraintBottom_toTopOf="@+id/edPass2Sign"
        app:layout_constraintStart_toStartOf="@+id/edEmailSign" />

    <TextView
        android:id="@+id/txtBox9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textColor="@color/AccentText"
        app:layout_constraintBottom_toTopOf="@+id/edAddress"
        app:layout_constraintStart_toStartOf="@+id/edEmailSign" />

    <TextView
        android:id="@+id/txtRePass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="*Required"
        android:textColor="@color/AccentText"
        app:layout_constraintEnd_toEndOf="@+id/edPassSign"
        app:layout_constraintTop_toBottomOf="@+id/edEmailSign" />

    <TextView
        android:id="@+id/txtReRePass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="*Required"
        android:textColor="@color/AccentText"
        app:layout_constraintEnd_toEndOf="@+id/edPass2Sign"
        app:layout_constraintTop_toBottomOf="@+id/edPassSign" />

    <EditText
        android:id="@+id/edAddress"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Curent Address"
        android:inputType="textPostalAddress"
        app:layout_constraintStart_toStartOf="@+id/edPass2Sign"
        app:layout_constraintTop_toBottomOf="@+id/edPass2Sign" />

</androidx.constraintlayout.widget.ConstraintLayout>