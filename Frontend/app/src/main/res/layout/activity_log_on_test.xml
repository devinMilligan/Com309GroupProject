<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.LogOnTest">

    <Button
        android:id="@+id/btnLogOn"
        android:layout_width="319dp"
        android:layout_height="52dp"
        android:layout_marginTop="40dp"
        android:text="Log On"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCreateUser"
        android:layout_width="324dp"
        android:layout_height="56dp"
        android:layout_marginTop="40dp"
        android:text="Create User"
        app:layout_constraintEnd_toEndOf="@+id/btnLogOn"
        app:layout_constraintStart_toStartOf="@+id/btnLogOn"
        app:layout_constraintTop_toBottomOf="@+id/btnLogOn" />

    <EditText
        android:id="@+id/edUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:ems="10"
        android:hint="User"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/btnCreateUser"
        app:layout_constraintStart_toStartOf="@+id/btnCreateUser"
        app:layout_constraintTop_toBottomOf="@+id/btnCreateUser" />

    <EditText
        android:id="@+id/edPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/edUser"
        app:layout_constraintStart_toStartOf="@+id/edUser"
        app:layout_constraintTop_toBottomOf="@+id/edUser" />
</androidx.constraintlayout.widget.ConstraintLayout>