<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/text_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/txtLast"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="83dp"
            android:fontFamily="@font/fresca"
            android:text="Email"
            android:textAlignment="center"
            android:textColor="@color/colorTextSecond"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/txtPic"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="160dp"
            android:fontFamily="@font/fresca"
            android:text="First Name"
            android:textAlignment="center"
            android:textColor="@color/colorTextSecond"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtLast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/txtFirst"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="83dp"
            android:fontFamily="@font/fresca"
            android:text="Last Name"
            android:textAlignment="center"
            android:textColor="@color/colorTextSecond"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/txtPassRe"
            android:layout_alignParentStart="true"
            android:layout_marginTop="500dp"
            android:text="Bottom"
            android:textAlignment="center"
            android:textSize="28sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txtAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/txtEmail"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="83dp"
            android:fontFamily="@font/fresca"
            android:text="Address"
            android:textColor="@color/colorTextSecond"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/txtAddress"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="83dp"
            android:fontFamily="@font/fresca"
            android:text="Password"
            android:textColor="@color/colorTextSecond"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtPassRe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/txtPass"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="83dp"
            android:fontFamily="@font/fresca"
            android:text="Re-Enter Password"
            android:textColor="@color/colorTextSecond"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnChangePass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/txtPassRe"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="93dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/gen_button_style"
            android:text="Update Password"
            android:textColor="@color/colorAccent" />

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/txtEmail"
            android:layout_alignTop="@id/txtEmail"
            android:layout_marginLeft="47dp"
            android:layout_marginTop="36dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:text="milldev@iastat.edu" />

        <EditText
            android:id="@+id/editFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/txtFirst"
            android:layout_alignTop="@id/txtFirst"
            android:layout_marginLeft="47dp"
            android:layout_marginTop="36dp"
            android:ems="10"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:text="Devin" />

        <EditText
            android:id="@+id/editLast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/txtLast"
            android:layout_alignTop="@id/txtLast"
            android:layout_marginLeft="47dp"
            android:layout_marginTop="36dp"
            android:ems="10"
            android:hint="Last Name"
            android:inputType="textPersonName"
            android:text="milligan" />

        <EditText
            android:id="@+id/editAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/txtAddress"
            android:layout_alignTop="@id/txtAddress"
            android:layout_marginLeft="47dp"
            android:layout_marginTop="36dp"
            android:ems="10"
            android:hint="Address"
            android:inputType="textPostalAddress"
            android:text="fdasfsasda" />

        <EditText
            android:id="@+id/editPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/txtPass"
            android:layout_alignTop="@id/txtPass"
            android:layout_marginLeft="47dp"
            android:layout_marginTop="36dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:text="fdasfsasda" />

        <EditText
            android:id="@+id/editPasswordRe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/txtPassRe"
            android:layout_alignTop="@id/txtPassRe"
            android:layout_marginLeft="47dp"
            android:layout_marginTop="36dp"
            android:ems="10"
            android:hint="Re-Enter Password"
            android:inputType="textPassword"
            android:text="fdasfsasda" />

        <TextView
            android:id="@+id/txtPic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="162dp"
            android:layout_marginTop="59dp"
            android:foregroundGravity="clip_horizontal|center"
            android:gravity="center"
            android:text="Profile Picture" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="130dp"
            android:layout_height="98dp"
            android:layout_alignTop="@id/txtPic"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="143dp"
            android:layout_marginTop="22dp"
            app:srcCompat="@drawable/profile" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txtFirst"
            android:layout_alignParentStart="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="-70dp"
            android:background="@drawable/gen_button_style"
            android:text="Save"
            android:textColor="@color/colorAccent" />

    </RelativeLayout>

</ScrollView>


